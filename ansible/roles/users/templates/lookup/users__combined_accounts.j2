{# merge_dict macro from roles/debops.cron/templates/lookup/cron__combined_jobs.j2 #}
{% macro merge_dict(current_dict, to_merge_dict, dict_key='name') %}
{%   set merged_dict = current_dict %}
{%   if to_merge_dict %}
{%     if to_merge_dict is mapping %}
{%       for dict_name in to_merge_dict.keys() | sort %}
{%         if to_merge_dict[dict_name][dict_key]|d() %}
{%           set _ = merged_dict.update({to_merge_dict[dict_name][dict_key]:(current_dict[to_merge_dict[dict_name][dict_key]]|d({}) | combine(to_merge_dict[dict_name], recursive=True))}) %}
{%         elif to_merge_dict[dict_name][dict_key] is undefined %}
{%           set _ = merged_dict.update({dict_name:(current_dict[dict_name]|d({}) | combine(to_merge_dict[dict_name], recursive=True))}) %}
{%         endif %}
{%       endfor %}
{%     elif to_merge_dict is not string and to_merge_dict is not mapping %}
{%       set flattened_dict = lookup("flattened", to_merge_dict) %}
{%       for element in ([ flattened_dict ] if flattened_dict is mapping else flattened_dict) %}
{%         if element[dict_key]|d() %}
{%           set _ = merged_dict.update({element[dict_key]:(current_dict[element[dict_key]]|d({}) | combine(element, recursive=True))}) %}
{%         endif %}
{%       endfor %}
{%     endif %}
{%   endif %}
{{ merged_dict | to_json }}
{% endmacro %}
{% set users__accounts_tpl_merge_1 =  (merge_dict({},                          users__groups,             'name') | from_json) %}
{% set users__accounts_tpl_merge_2 =  (merge_dict(users__accounts_tpl_merge_1, users__group_groups,       'name') | from_json) %}
{% set users__accounts_tpl_merge_3 =  (merge_dict(users__accounts_tpl_merge_2, users__host_groups,        'name') | from_json) %}
{% set users__accounts_tpl_merge_4 =  (merge_dict(users__accounts_tpl_merge_3, users__dependent_groups,   'name') | from_json) %}
{% set users__accounts_tpl_merge_5 =  (merge_dict(users__accounts_tpl_merge_4, users__default_accounts,   'name') | from_json) %}
{% set users__accounts_tpl_merge_6 =  (merge_dict(users__accounts_tpl_merge_5, users__accounts,           'name') | from_json) %}
{% set users__accounts_tpl_merge_7 =  (merge_dict(users__accounts_tpl_merge_6, users__group_accounts,     'name') | from_json) %}
{% set users__accounts_tpl_merge_8 =  (merge_dict(users__accounts_tpl_merge_7, users__host_accounts,      'name') | from_json) %}
{% set users__accounts_tpl_items   =  (merge_dict(users__accounts_tpl_merge_8, users__dependent_accounts, 'name') | from_json) %}

